<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE schema SYSTEM "../../../lib/pkp/dtd/xmlSchema.dtd">

<!--
  * plugins/generic/coarNotifyReviewOffer/schema.xml
  *
  * CoarNotifyReviewOfferPlugin DB XML schema.
  *
  -->

<schema version="0.2">
    <table name="review_offer_preferences">
        <field name="id" type="I8">
            <KEY/>
            <AUTOINCREMENT/>
        </field>
        <field name="submission_id" type="I8">
            <NOTNULL/>
        </field>
        <field name="service_url" type="C2" size="255">
            <NOTNULL/>
        </field>
        <field name="is_sent" type="L">
            <NOTNULL/>
            <DEFAULT VALUE="0"/>
        </field>
        <descr>List of review offer preferences</descr>
    </table>
</schema>